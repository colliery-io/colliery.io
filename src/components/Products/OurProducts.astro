---
/**
 * * This component displays a grid of product cards
 * Each product card shows an image, title, description, and features
 */

// components
import Badge from "@components/Badge/Badge.astro";

interface ProductData {
  title: string;
  description: string;
  image: string;
  features: string[];
  link?: string;
}

// data
const productData: ProductData[] = [
  {
    title: "Product Name",
    description: "A brief description of the product and its main value proposition.",
    image: "/assets/products/product-placeholder.jpg",
    features: [
      "Key feature 1",
      "Key feature 2",
      "Key feature 3"
    ],
    link: "#"
  }
  // Add more products as needed
];
---

<section
  id="our-products"
  class="overflow-hidden bg-[url('/assets/pattern-light.svg')] bg-center bg-no-repeat py-12 md:py-20 dark:bg-[url('/assets/pattern-dark.svg')]"
>
  <div class="site-container">
    <div class="mx-auto mb-16 text-center md:max-w-4xl" data-aos="fade-up">
      <Badge>Products</Badge>
      <h2 class="h2 mb-4">Our Solutions</h2>
      <p class="description text-lg text-pretty md:text-xl">
        Discover our range of innovative products designed to solve real-world problems.
      </p>
    </div>
    <div id="trigger-products-cards" class="grid gap-6 md:grid-cols-2 lg:grid-cols-3" data-aos="fade-left">
      {
        productData.map((product, idx) => (
          <div
            class="group relative overflow-hidden rounded-lg bg-white p-6 shadow-lg transition-all duration-300 hover:shadow-xl dark:bg-gray-800"
            data-aos="zoom-in"
            data-aos-delay={0.15 * idx}
            data-aos-trigger="#trigger-products-cards"
          >
            <div class="mb-4 aspect-video overflow-hidden rounded-lg">
              <img
                src={product.image}
                alt={product.title}
                class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
              />
            </div>
            <h3 class="mb-2 text-xl font-bold">{product.title}</h3>
            <p class="mb-4 text-gray-600 dark:text-gray-300">{product.description}</p>
            <ul class="mb-4 space-y-2">
              {product.features.map((feature) => (
                <li class="flex items-center text-gray-600 dark:text-gray-300">
                  <svg
                    class="mr-2 h-5 w-5 text-primary-500"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
            {product.link && (
              <a
                href={product.link}
                class="inline-flex items-center text-primary-500 hover:text-primary-600 dark:hover:text-primary-400"
              >
                Learn More
                <svg
                  class="ml-2 h-4 w-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"
                  />
                </svg>
              </a>
            )}
          </div>
        ))
      }
    </div>
  </div>
</section> 