---
import { Icon } from "astro-icon/components";

// main layout
import BaseLayout from "@layouts/BaseLayout.astro";

// components
import ContactForm from "@components/Forms/ContactForm.astro";

// utils
import { getLocaleFromUrl } from "@js/localeUtils";
import { getTranslatedData } from "@js/translationUtils";

// data
const currLocale = getLocaleFromUrl(Astro.url);
const siteData = getTranslatedData("siteData", currLocale);
---

<BaseLayout title="Contact Me" description="Get in touch! Contact us using this page.">
	<div class="site-container mx-auto mt-16 overflow-x-clip">
		<div
			class="w-full bg-[url('/assets/pattern-light.svg')] bg-center bg-no-repeat py-20 text-center md:py-32 dark:bg-[url('/assets/pattern-dark.svg')]"
		>
			<h1 class="h1">Contact Us</h1>
			<p class="description mx-auto mt-6 max-w-2xl">
				When you fill out the form below, we will contact you to set up a time and take a look at
				your project. We look forward to meeting you!
			</p>
		</div>

		<div class="grid gap-8">
			<!-- contact form -->
			<div class="mb-12">
				<ContactForm />
			</div>
		</div>
	</div>
</BaseLayout>